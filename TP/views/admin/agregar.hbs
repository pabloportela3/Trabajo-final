<div class="holder">
    <div class="contanier" style="margin:50px auto">
        <div class="row">
            <div class="col-6 offset-3">
                <h4>Agregar una nueva novedad</h4>
                <form method="post" action="/admin/novedades/agregar">
                    <div class="form-group">
                        <input type="text" placeholder="Titulo" class="form-control" name="titulo">
                    </div>
                    <div class="form-group">
                        <textarea placeholder="Subtitulo" class="form-control" name="subtitulo"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea placeholder="Cuerpo" class="form-control" name="cuerpo"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </form>
                {{#if error}}
                <h5>{{message}}</h5>
                {{/if}}
            </div>
        </div>
    </div>
</div>

