<div  class="holder">
<div class="contanier" style="margin:50px auto">
    <div class="row">
        <p class="text-end">Hola {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n<i class="fas fa-sign-out-alt"></i></a></p>
    </div>
</div>
<div class="row">
    <div class="col-7 text-white" style="margin-top:-9px 
     ;">
        <h3>Listado de Novedades</h3>
    </div>
    <div class="col-2 text-end">
        <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>  Nuevo</a>
    </div>
<div class="col-3 text-right">
    <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
        <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
    </form>
</div>
</div>
<div class="row">
    <div class="col">
        <table class="table">
            <thead class="thead-dark text-dark bg-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col" class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody class="text-white">
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td class="text-center">
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fa fa-pencil-alt"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{#if is_search}}
            {{#unless novedades.length}}
                <p class="text-white">No se encontraron resutados para "<strong>{{q}}</strong>"</p>
            {{/unless}}
        {{/if}}
    </div>
</div>
</div>